javascript


$(document).ready(function () {
    mostrarProdutos(produtos);

    $('#categoria').on('change', filtrarProdutos);
    $('#voltar').on('click', selecTodos);
});

function selecTodos() {
    $.each(produtos, (index, produto) => {
        produto.selected = true;
    });
    mostrarProdutos(produtos);
}

const produtos = [
    { id: 'familias', name: 'Família de coelhos.', image: 'https://www.sylvanianfamilies.com/assets/includes_gl/img/products/2356_1659686016973.jpg', preco: 'R$119,90' },
    { id: 'familias', name: 'Família de ovelhas.', image: 'https://www.sylvanianfamilies.com/assets/includes_gl/img/products/2290_1639384098638.jpg', preco: '114,99,99' },
    { id: 'familias', name: 'Família de gatos.', image: 'https://www.sylvanianfamilies.com/assets/includes_gl/img/products/1989_1595920595136.jpg', preco: 'R$99,90' },
    { id: 'bebes', name: 'Carrinho de bebê dos patinhos.', image: 'https://www.sylvanianfamilies.com/assets/includes_gl/img/products/2070_1610415702769.jpg', preco: '79,90' },
    { id: 'bebes', name: 'Bebê Rato Marshmallow.', image: 'https://www.sylvanianfamilies.com/assets/includes_gl/img/products/1738_1527491871210.jpg', preco: '59,90' },
    { id: 'bebes', name: 'Adoráveis Fantasias (Coelhinho e Cachorrinho).', image: 'https://www.sylvanianfamilies.com/assets/includes_gl/img/products/2077_1610417838620.jpg', preco: '89,90' },
    { id: 'casas', name: 'Primeira Casa Sylvanian Families.', image: 'https://www.sylvanianfamilies.com/assets/includes_gl/img/products/2355_1659685801491.jpg', preco: 'R$ 179,99' },
    { id: 'casas', name: 'Courtyard Home Gift Set', image: 'https://www.sylvanianfamilies.com/assets/includes_gl/img/products/2253_1627288194941.jpg', preco: '199,90' },
];

function filtrarProdutos() {
    const selecCategoria = $('#categoria').val();

    const produtosFiltrados = selecCategoria === 'todos'
        ? produtos
        : produtos.filter(produto => produto.id === selecCategoria);

    mostrarProdutos(produtosFiltrados);
}

function mostrarProdutos(produtos) {
    const listaProdutoContainer = $('#listaprodutos ul');
    listaProdutoContainer.empty();

    if (produtos.length === 0) {
        listaProdutoContainer.html('Nenhum produto encontrado.');
    } else {
        produtos.forEach(produto => {
            const listaItem = $('<li></li>').addClass(produto.id);

            const produtoImagem = $('<img>')
                .attr('src', produto.image)
                .attr('alt', produto.name);
            listaItem.append(produtoImagem);

            const nomeProduto = $('<span></span>').text(produto.name);
            listaItem.append(nomeProduto);

            if (produto.preco !== undefined) {
                const precoProduto = $('<span></span>').addClass('preco').text(produto.preco);
                listaItem.append(precoProduto);
            }

            listaProdutoContainer.append(listaItem);
        });
    }
}
